                                                        <% }) %>
                                                </ul>
                                                <div class="d-flex flex-column mt-4">
                                                    <button class="btn btn-outline-primary btn-sm update-info-btn" type="button" productId="<%= product.id %> ">Update Info</button><button class="btn btn-outline-primary btn-sm mt-2 update-images-btn" type="button"
                                                        productId="<%= product.id %> ">Update Images</button>
                                                    <button class="btn btn-outline-primary btn-sm mt-2 deleteProductBtn" type="button" productId="<%= product.id %> ">Delete Product <i class="fa fa-trash"></i> </button></div>

                                            </div>
                                        </div>
                                        <% } %>
                                            <% }) %>
                            </div>
                        </div>
                    </div>
                </div>



                <div id="view4">
                    <h2 class="mb-3">Create New Category</h2>
                    <button class="btn btn-primary categoryBtn"> <i class="fa fa-plus"></i> New Category</button>
                </div>

            </div>
            <br />


        </div>
        <div class="update-modal">

            <button class="btn btn-danger close-modal"> <i class="fa fa-close"></i> </button>


            <div class="container contact-form">
                <form method="" name="UpdateInfo" onsubmit="event.preventDefault()">
                    <h3>Update Product Info</h3>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" name="txtName" class="form-control" id="product_name_updated" placeholder="Name Of Product" value="" />
                            </div>
                            <div class="form-group">
                                <label for="productSize">Select Size</label>
                                <select name="txtSize" id="productSize_updated" class="form-control">
                                    <option value="small">S</option>
                                    <option value="medium">M</option>
                                    <option value="Large">L</option>
                                    <option value="extra large">XL</option>
                                    <option value="extra extra large">XXL</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <input type="number" name="txtPrice" class="form-control" placeholder="Price" id="product_price_updated" value="" />
                            </div>
                            <div class="form-group">
                                <input type="number" name="txtSlashedPrice" id="slashed_price_updated" class="form-control" placeholder="Slashed Price" value="" />
                            </div>
                            <div class="form-group">
                                <label for="category_updated">Select Category</label>
                                <select name="Category" id="category_updated" class="form-control">
                                </select>
                            </div>

                        </div>
                        <div class="col-md-6">

                            <div class="form-group">
                                <label for="updated_available">Is Product Available ?</label>
                                <select name="Category" id="updated_available" class="form-control">
                                    <option value="yes">Yes</option>
                                    <option value="no">No</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <textarea name="txtDesc" class="form-control" placeholder="Product Description" id="product_description_updated" required style="width: 100%; height: 220px;"></textarea>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group submitBtn">
                                <input type="submit" name="btnSubmit" class="btnContact text-center updateInfoBtn bg-success" value="Save Changes" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="create-modal">
            <button class="btn btn-danger close-modal"> <i class="fa fa-close"></i> </button>

            <div class="container contact-form">
                <form method="" name="Create" onsubmit="event.preventDefault()">
                    <h3>Create Product</h3>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" name="txtName" class="form-control" placeholder="Name Of Product" value="" id="product_name" required />
                            </div>
                            <div class="form-group">
                                <label for="productSize">Select Size</label>
                                <select name="txtSize" id="productSize" class="form-control">
                                    <option value="small">S</option>
                                    <option value="medium">M</option>
                                    <option value="Large">L</option>
                                    <option value="extra large">XL</option>
                                    <option value="extra extra large">XXL</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <input type="number" name="txtPrice" class="form-control" placeholder="Price" value="" id="product_price" required />
                            </div>

                            <div class="form-group">
                                <label for="category">Select Category</label>
                                <select name="Category" id="category" class="form-control">
                                    <option value="Trouser">Trousers</option>
                                    <option value="Shirt">Shirts</option>
                                    <option value="T-Shirt">T-Shirt</option>
                                    <option value="Senator">Senator</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <input type="number" name="txtSlashedPrice" required class="form-control" placeholder="Slashed Price" id="slashed_price" value="" />
                            </div>

                        </div>
                        <div class="col-md-6">

                            <div class="form-group">
                                <label for="available">Is Product Available ?</label>
                                <select name="Category" id="available" class="form-control">
                                    <option value="yes">Yes</option>
                                    <option value="no">No</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <textarea name="txtDesc" class="form-control" required placeholder="Product Description" style="width: 100%; height: 175px;" id="product_description"></textarea>
                            </div>
                            <div class="custom-file">
                                <input type="file" multiple required class="custom-file-input product_image form-control" accept="image/*" id="customFile">
                                <label class="custom-file-label" for="customFile">Upload Images</label>
                            </div>
                        </div>

                        <div class="col-md-12 mt-4">
                            <div class="form-group submitBtn">
                                <input type="submit" name="btnSubmit" class="btnContact text-center bg-success" id="createProduct" value="Create Product" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="update-image-modal ">
            <button class="btn btn-danger close-modal"> <i class="fa fa-close"></i> </button>
            <div class="container other-images owl-carousel owl-theme ">



            </div>
            <div class="container more-images-form-container">


                <form method="" name="moreImages" onsubmit="event.preventDefault()" class="more-images">
                    <h3>Upload More Images</h3>
                    <div class="row">
                        <div class="col-12">
                            <div class="custom-file">
                                <input type="file" multiple required class="custom-file-input form-control product_update_images" id="customFile">
                                <label class="custom-file-label" for="customFile">Upload Images</label>
                            </div>
                        </div>
                        <div class="col-md-12 mt-2">
                            <div class="form-group submitBtn ">
                                <input type="submit" name="btnSubmit" class="btnContact text-center btn btn-primary moreImagesBtn" value="Upload" onclick="event.preventDefault()" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="warning-modal">
            <button class="btn btn-danger close-modal"> 
                <i class="fa fa-close"></i> 
            </button>
            <div class="container more-images warning-modal-container row p-5 w-sm-90 w-lg-50 w-md-70">
                <div class="col-12">
                    <h3 class="text-center">Are Your Sure You Want To Delete This</h3>
                </div>
                <div class="col-12 row mt-3">
                    <div class="col-6 js-center">
                        <button class="btn btn-danger p-2 px-3 deleteChanges">Yes</button>
                    </div>
                    <div class="col-6 js-center">
                        <button class="btn btn-success p-2 px-3" onclick="event.target.parentElement.parentElement.parentElement.parentElement.classList.toggle('open-modal')">No</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="newCategory-modal">
            <button class="btn btn-danger close-modal"> 
                <i class="fa fa-close"></i> 
            </button>
            <div class="container more-images-form-container warning-modal-container p-3">


                <form method="" class="more-images p-5" name="Category" onsubmit="event.preventDefault()">
                    <h3 class="text-center">Create New Category</h3>
                    <div class="form-group">
                        <label for="product_section">Select Section</label>
                        <select name="product section" id="product_section" class="form-control">
                            <option value="Kids">Kids</option>
                            <option value="Women">Women</option>
                            <option value="Materials">Materials and Applique</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="text" name="txtPrice" class="form-control" id="new_category_name" required placeholder="Catgory Name" value="" />
                    </div>

                    <div class="col-md-12">
                        <div class="form-group submitBtn">
                            <input type="submit" name="btnSubmit" class="btnContact text-center btn btn-primary createCategory" value="Create Category" />
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="loading-modal">
            <div class="spinner-border text-primary"></div>
        </div>

        <div class="error-modal">
            <button class="btn btn-danger close-modal"> <i class="fa fa-close"></i> </button>
            <div class="error_div p-3 bg-danger justify-content-center align-items-center">
                <i class="fa fa-exclamation-triangle"></i>
                <p>Something went wrong</p>
            </div>
        </div>

        <div class="success-modal">
            <button class="btn btn-danger close-modal"> <i class="fa fa-close"></i> </button>
            <div class="done_div p-3 bg-success justify-content-center align-items-center">
                <i class="fa fa-circle-check"></i>
                <p>Something went wrong</p>
            </div>
        </div>

    </div>



</body>


