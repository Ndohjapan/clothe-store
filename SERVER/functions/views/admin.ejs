    <link href="/template1/responsive-tabs.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/OwlCarousel2-2.3.4/dist/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="https://unpkg.com/cd-themify-icons@0.0.1/index.css">
</head>

<body class="bd1">
    <div id="demopage">
        <h1>StacyUk Couture</h1>

        <div class="container1 container">
            <ul class="rtabs">
                <li section="Kids"><a href="#view1">Kiddies</a></li>
                <li section="Women"><a href="#view2">Women</a></li>
                <li section="Materials"><a href="#view3">Materials/Applique</a></li>
                <li section="Category"><a href="#view4">New Category</a></li>
            </ul>

            <div id="category-holder" style="display: none;">
                <%= categories_list %>
                    <%let kids_category = "" %>
                        <%let women_category = ""%>
                            <%let material_category = ""%>


                                <% for (category of categories_list) {%>
                                    <%if (category.section === "Kids") {%>
                                        <%kids_category += `<option value="${category.new_category}">${category.new_category}</option>`%>
                                            <%} else if (category.section === "Women") {%>
                                                <%women_category += `<option value="${category.new_category}">${category.new_category}</option>`%>
                                                    <%} else if (category.section === "Materials") {%>
                                                        <%material_category += `<option value="${category.new_category}">${category.new_category}</option>`%>
                                                            <%}%>

                                                                <%}%>

                                                                    <p id="kids_category">
                                                                        <%= kids_category %>
                                                                    </p>
                                                                    <p id="women_category">
                                                                        <%= women_category %>
                                                                    </p>
                                                                    <p id="material_category">
                                                                        <%= material_category %>
                                                                    </p>
            </div>




            <div class="panel-container">
                <div id="view1">
                    <button class="btn btn-outline-primary newProduct" title="Add New Product" section="Kids">
                            Add <i class="fa fa-plus"></i>
                        </button>
                    <div class="container mt-5 mb-5">
                        <div class="d-flex justify-content-center row">
                            <div class="col-md-10">
                                <% products_list.forEach(product => { %>
                                    <% if ( product.root_category === "Kids" ) { %>
                                        <div class="row p-2 bg-white border rounded mt-2">
                                            <div class="col-md-3 mt-1"><img class="img-fluid img-responsive rounded product-image" src="<%= product.images[0].secure_url %> "></div>
                                            <div class="col-md-6 mt-1">
                                                <h5>
                                                    <%= product.name %>
                                                </h5>
                                                <div class="d-flex flex-row">
                                                    <div class="ratings mr-2"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></div><span>310</span>
                                                </div>
                                                <div class="mt-1 mb-1 spec-1"><span> <strong> Is Available: </strong> </span><span class="dot"></span><span> <%= product.isAvailable %>  </span></div>
                                                <div class="mt-1 mb-1 spec-1"><span> <strong> Category: </strong> </span><span class="dot"></span><span> <%= product.category %>  </span></div>
                                                <div class="mt-1 mb-1 spec-1"><span> <strong> Description: </strong> </span><span class="dot"></span><span> <%= product.description %>  </span></div>
                                            </div>
                                            <div class="align-items-center align-content-center col-md-3 border-left mt-1">
                                                <div class="d-flex flex-row align-items-center">
                                                    <h4 class="mr-1"> $
                                                        <%= product.price %>
                                                    </h4><span class="strike-text"> $<%= product.slashed_price %>  </span>
                                                </div>
                                                <h6 class="text-success">Free shipping</h6>
                                                <ul class="img_links" style="display: none">
                                                    <% product.images.forEach(img => { %>
                                                        <li image_id='<%= img.public_id %>'>
                                                            <%= img.secure_url %>
                                                        </li>
                                                        <% }) %>
                                                </ul>
                                                <div class="d-flex flex-column mt-4">
                                                    <button class="btn btn-outline-primary btn-sm update-info-btn" type="button" productId="<%= product.id %> ">Update Info</button><button class="btn btn-outline-primary btn-sm mt-2 update-images-btn" type="button"
                                                        productId="<%= product.id %> ">Update Images</button>
                                                    <button class="btn btn-outline-primary btn-sm mt-2 deleteProductBtn" type="button" productId="<%= product.id %> ">Delete Product <i class="fa fa-trash"></i> </button></div>

                                            </div>
                                        </div>
                                        <% } %>
                                            <% }) %>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="view2">
                    <button class="btn btn-outline-primary newProduct" section="Women" title="Add New Product">
                Add <i class="fa fa-plus"></i>
            </button>
                    <div class="container mt-5 mb-5">
                        <div class="d-flex justify-content-center row">
                            <div class="col-md-10">
                                <% products_list.forEach(product => { %>
                                    <% if ( product.root_category === "Women" ) { %>
                                        <div class="row p-2 bg-white border rounded mt-2">
                                            <div class="col-md-3 mt-1"><img class="img-fluid img-responsive rounded product-image" src="<%= product.images[0].secure_url %> "></div>
                                            <div class="col-md-6 mt-1">
